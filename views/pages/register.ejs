<div class="ui container auth-container">
  <h2>Register</h2>
  <form class="ui form" method="POST" action="register">
    <div class="field">
      <label>Name</label>
      <div class="two fields">
        <div class="field">
          <input
            id="fName"
            type="text"
            name="fName"
            placeholder="First name"
            required=""
            autofocus=""
          />
        </div>
        <div class="field">
          <input
            id="lName"
            type="text"
            name="lName"
            placeholder="Last name"
            required=""
          />
        </div>
      </div>
    </div>
    <div class="field">
      <input
        id="email"
        type="email"
        name="email"
        placeholder="Email"
        required=""
        autofocus=""
      />
    </div>
    <div class="field">
      <input
        id="password"
        type="password"
        name="password"
        placeholder="Password"
        required=""
      />
    </div>
    <div class="field">
      <input
        id="confPassword"
        type="password"
        name="confPassword"
        placeholder="Confirmation Password"
        required=""
      />
    </div>
    <% if(errors && errors.length > 0) { %>
    <div class="ui warning message visible">
      <div class="header">Can't register</div>
      <%= errors %>
    </div>
    <% } %>
    <div>
      <div class="field">
        <div class="ui checkbox">
          <input
            type="checkbox"
            name="consentReg"
            id="consentReg"
            checked
            disabled
            required
          />
          <label for="consentReg">
            If you register you're accepting the <a href="#">privacy policy</a>
          </label>
        </div>
      </div>
      <div class="field">
        <button type="submit" class="ui button">Register</button>
      </div>
      <div>Already have an account? <a href="/login">Login</a></div>
    </div>
  </form>
</div>
